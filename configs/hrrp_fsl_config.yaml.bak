data:
  simulated_path: ./datasets/simulated_hrrp
  measured_path: ./datasets/measured_hrrp
  base_classes:
    - EA-18G
    - EP-3E
    - 捕食者
    - 幻影2000
    - 全球鹰
    - IDF
    - F2
  novel_classes:
    - F15
    - F16
    - F18
    - F22
    - F35
  target_length: 1000
  normalization: log_max
fsl:
  n_way: 5
  k_shot: 10
  q_query: 30
  test_episodes: 600
  classifier_temperature: 10
model:
  adapter_gaf_cnn:
    gaf_size: 128
    cnn_channels:
      - 16
      - 32
      - 64
    cnn_kernel_size: 3
    cnn_activation: relu
    cnn_use_batchnorm: true
  fusion_module:
    hidden_dim: 4096
    kappa: 0.5
  foundation_model:
    name: CLIP
    variant: ViT-B-32
    visual_encoder_dim: 512
    text_encoder_dim: 512
training:
  epochs: 10
  lr: 0.005
  batch_size: 128
  optimizer: AdamW
  adapter_loss:
    alignment_loss_type: cosine
    use_contrastive: true
    lambda_v2v: 0.5
    temperature_v: 0.1
  semalign_loss:
    loss_type: l1
    dropout_semalign: 0.2
  baseline_cnn_loss:
    loss_type: crossentropy
semantics:
  description_file: configs/semantic_descriptions.yaml
  generation:
    llm: claude_37
    text_type: llm_generated
paths:
  datasets_base: ./datasets
  checkpoints: ./checkpoints
  logs: ./logs
  semantic_features_dir: ./semantic_features
num_workers: 4
seed: 410073
